DATA: T_Return TYPE STANDARD TABLE OF DDshretval WITH HEADER LINE.
DATA: T_Mapping TYPE STANDARD TABLE OF DSelc.
DATA: S_Mapping TYPE DSelc.

MODULE LOV_DOCID INPUT.

TYPES: BEGIN OF TS_ST_ZDOC_ID,
        DOCID TYPE ZRAJATABLE1-DOCID,
  FIRSTNAME TYPE ZRAJATABLE1-FIRSTNAME,
LASTNAME TYPE ZRAJATABLE1-LASTNAME,
AGE TYPE ZRAJATABLE1-AGE,
MOBILE TYPE ZRAJATABLE1-MOBILE,
GENDER TYPE ZRAJATABLE1-GENDER,
DESCRIPTION TYPE ZRAJATABLE1-DESCRIPTION,

  END OF TS_ST_ZDOC_ID.

DATA: IT_ST_ZDOC_ID TYPE TABLE OF TS_ST_ZDOC_ID WITH HEADER LINE,
      WA_ST_ZDOC_ID TYPE TS_ST_ZDOC_ID.

SELECT M~DOCID, M~FIRSTNAME , M~LASTNAME , M~AGE, M~MOBILE, M~GENDER, M~DESCRIPTION  INTO CORRESPONDING FIELDS OF TABLE @IT_ST_ZDOC_ID FROM ZRAJATABLE1 AS M.

SORT IT_ST_ZDOC_ID ASCENDING BY DOCID.

  S_Mapping-Fldname = 'F0001'.
  S_Mapping-DyFldname = 'WAM-DOCID'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.

    S_Mapping-Fldname = 'F0002'.
  S_Mapping-DyFldname = 'WAM-FIRSTNAME'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.

    S_Mapping-Fldname = 'F0003'.
  S_Mapping-DyFldname = 'WAM-LASTNAME'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.

    S_Mapping-Fldname = 'F0004'.
  S_Mapping-DyFldname = 'WAM-AGE'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.



    S_Mapping-Fldname = 'F0005'.
  S_Mapping-DyFldname = 'WAM-MOBILE'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.


      S_Mapping-Fldname = 'F0006'.
  S_Mapping-DyFldname = 'WAM-GENDER'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.

        S_Mapping-Fldname = 'F0007'.
  S_Mapping-DyFldname = 'WAM-DESCRIPTION'.
  APPEND S_Mapping TO T_Mapping.
  CLEAR S_Mapping.

  PERFORM Call_Fun_Show_Lov TABLES  IT_ST_ZDOC_ID USING 'WAM-DOCID'.

  CALL FUNCTION 'SAPGUI_SET_FUNCTIONCODE'
  EXPORTING
    FUNCTIONCODE = '=DISPLAY'
    EXCEPTIONS
      FUNCTION_NOT_SUPPORTED = 1
  OTHERS = 2.

ENDMODULE.


FORM Call_Fun_Show_Lov TABLES DataTableName USING RetField.
